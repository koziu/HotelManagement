@model IEnumerable<HotelManagement.Mvc.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArriveDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepatureDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservationState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArriveDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepatureDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@model HotelManagement.Mvc.Models.ClientsReservationModels
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title fa fa-calendar"> | <b>Dodaj nową rezerwację</b></h3>
                    <hr/>
                </div><!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.SelectedClientId, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.SelectedClientId, Model.Clients, htmlAttributes: new { @class = "form-control chosen-select" })
                                    @Html.ValidationMessageFor(model => model.SelectedClientId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SelectedRoomId, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("RoomId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                                    @Html.ValidationMessageFor(model => model.SelectedRoomId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.Event.ArriveDate,  new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Event.ArriveDate, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Event.ArriveDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Dodaj" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function() {

            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Oops, nic nie znaleziono!' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }

        })
    </script>
}